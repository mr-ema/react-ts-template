{
  "compilerOptions": {
    "outDir": ".build",
    "baseUrl": ".",
    
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,  
    "moduleResolution": "node",
    "esModuleInterop": true,

    "lib": ["es6", "dom", "es2016", "es2017"],
    "types": ["react/next", "react-dom/next"],
    
    "paths": {
      // ! Important
      // * To Add More Paths You Have To Added Here And In Webpack.common.js
      "@/*": ["src/*"],
      "@Public/*": ["public/*"]
    },
  },
  
  "include": ["src/**/*.tsx", "custom.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}